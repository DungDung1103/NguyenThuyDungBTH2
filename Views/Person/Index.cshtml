@model IEnumerable<NguyenThuyDungBTH2.Models.Person>
    @{
        ViewData["Title"]="Index";
    }
    <p>
        <a asp-action ="Upload">Create New</a>
    </p>
    <table class=" table ">
        <thead>
            <tr>
                <th>
                     @Html.DisplayNameFor(model =>model.PersonID)
                </th>
                <th>
                    @Html.DisplayNameFor(model =>model.PersonName)
                </th>
                <th>
                    @Html.DisplayNameFor(model =>model.PersonAge)
                </th>
                
            </tr>
        </thead>
        
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.PersonID)</td>
                <td>@Html.DisplayFor(m => item.PersonName)</td>
                <td>@Html.DisplayFor(m => item.PersonAge)</td>
                <td>
                <a asp-action="Edit" asp-route-id="@item.PersonID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PersonID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PersonID">Delete</a>
                </td>
            </tr>
        }
    </table>