@model IEnumerable<NguyenThuyDungBTH2.Models.Customer>
    <p>
        <a class="btn btn-primary" asp-action ="Create">Create a new Customer</a>
    </p>
    <table class=" table table-all">
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Customer Age</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.CustomerID)</td>
                <td>@Html.DisplayFor(m => item.CustomerName)</td>
                <td>@Html.DisplayFor(m => item.CustomerAge)</td>
            </tr>
        }
    </table>