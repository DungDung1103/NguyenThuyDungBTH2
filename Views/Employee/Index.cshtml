@model IEnumerable<NguyenThuyDungBTH2.Models.Employee>
    <p>
        <a class="btn btn-primary" asp-action ="Create">Create a new Employee</a>
    </p>
    <table class=" table table-all">
        <tr>
            <th>Employee ID</th>
            <th>Employee Name</th>
            <th>Employee Age</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.EmployeeID)</td>
                <td>@Html.DisplayFor(m => item.EmployeeName)</td>
                <td>@Html.DisplayFor(m => item.EmployeeAge)</td>
            </tr>
        }
    </table>